{
  "name": "@mu-utils/persian-date",
  "version": "1.0.6",
  "description": "A Persian date to convert from gregorian and behave like a date in Javascript project.",
  "main": "dist/bundle.min.cjs.js",
  "module": "dist/bundle.min.esm.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mu-utils/persian-date.git"
  },
  "scripts": {
    "start": "npm run watch",
    "start:demo": "cd ./demo && npm run watch",
    "test": "jest",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "demo": "ts-node demo/index.ts",
    "prepublishOnly": "npm run build",
    "postpublish": "git tag -a v$(node -p \"require('./package.json').version\") -m \"Release v$(node -p \"require('./package.json').version\") [skip ci]\" && git push --follow-tags"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rollup": "^4.21.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "persian-date": "^1.1.0"
